<div class="utility-nav">
  <button type="button" class="utility-nav__icon-wrap">
    <span class="icon-search utility-nav__icon"></span>
  </button>

  <form action="/search" method="get" role="search" class="utility-nav__searchform hide">
    <label for="Search" class="label-hidden">
      {{ 'general.search.placeholder' | t }}
    </label>

    <input
      class="utility-nav__input"
      type="search"
      name="q"
      id="Search"
      value="{{ search.terms | escape }}"
      placeholder="{{ 'general.search.placeholder' | t }}"/>

    <button type="submit" class="utility-nav__icon">
      {% include 'icon-search' %}
      <span class="icon-fallback-text">{{ 'general.search.submit' | t }}</span>
    </button>
  </form>

  {% if shop.customer_accounts_enabled %}
    <a href="/account" rel="nofollow" class="utility-nav__icon-wrap">
      <span class="icon-user-o utility-nav__icon"></span>
    </a>
  {% endif %}

  <a href="/cart" class="utility-nav__icon-wrap" data-quick-cart-toggle>
    <span class="icon-shopping-cart utility-nav__icon"></span>
  </a>

  <a href="#" class="utility-nav__big-button">Find a nearby clinic</a>
</div>