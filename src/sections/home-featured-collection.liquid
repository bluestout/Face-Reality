<section class="featured-collection">
  <div class="container">
    <div class="featured-collection__limiter">
      <h2 class="featured-collection__title">{{ section.settings.title }}</h2>
      <p class="featured-collection__text">{{ section.settings.text }}</p>
    </div>
  </div>

  {% if section.settings.collection %}
    <div class="container">
      <div class="featured-collection__limiter">
        <h2 class="featured-collection__title">{{ section.settings.list_title }}</h2>
      </div>
    </div>
    <div class="max-wrap">
      <div class="row no-gutters">
        {% for prod in collections[section.settings.collection].products %}
          <div class="col-lg-3 col-6">
            {% include 'product-item' with prod, index: forloop.index %}
          </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}
</section>

{% schema %}
  {
    "name": "Featured Products",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Section Title"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Section Description"
      },
      {
        "type": "text",
        "id": "list_title",
        "label": "Collection Title"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Featured Collection"
      }
    ],
    "presets": [{
        "name": "Featured Products",
        "category": "Front Page"
    }]
  }
{% endschema %}
