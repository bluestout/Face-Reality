<div class="information-section">

  <div class="info-s-banner">
    <h1 class="info-s-banner__title">{{ page.title }}</h1>
    <h2 class="info-s-banner__subtitle">Learn acne basics</h2>
    {% include 'breadcrumbs' %}
  </div>

  <div class="info-s-articles">
    <a href="/pages/information-center" class="info-s-articles__backlink">Back to Acne Information Center Index</a>
    <div class="info-s-articles__articles">
      {% for link in linklists['information-center'].links %}
        {% if link.handle == page.handle and link.links.size > 0 %}
          <div class="row">
            {% for sublink in link.links %}
              <div class="col-xl-3 col-lg-4 col-sm-6 col-12 flex">
                <div class="info-s-articles__article flex-col-wrap">
                  <div class="info-s-articles__image-wrap">
                    <img src="http://via.placeholder.com/375x220" alt="{{ sublink.title }}" class="info-s-articles__image">
                  </div>
                  <h3 class="info-s-articles__title">{{ sublink.title }}</h3>
                  <div class="info-s-articles__description">Learn acne basics</div>
                  <div class="flex-shaper"></div>
                  <a href="{{ sublink.url }}" class="info-s-articles__link">
                    <span class="info-s-articles__text">Learn More</span>
                    <span class="info-s-articles__icon icon-angle-right"></span>
                  </a>
                </div>
              </div>
            {% endfor %}
          </div>
          {% break %}
        {% endif %}
      {% endfor %}
    </div>
    <a href="/pages/information-center" class="info-s-articles__backlink">Back to Acne Information Center Index</a>
  </div>

  {% include 'info-cta' %}
</div>